{# node--spotify--teaser.html.twig #}

<article{{ attributes }}>
  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }}><a href="{{ url }}" rel="bookmark">{{ label }}</a></h2>
  {% endif %}
  {{ title_suffix }}

  <div class="spotify-teaser-content">
    {% if content.track_album_image_url %}
      {{ content.track_album_image_url }}
      {{ content.track_main_genre }}
    {% endif %}

{{content}}
    {# You can add more teaser-specific fields or content here #}
  </div>
</article>
